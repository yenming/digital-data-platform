<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>用戶資料設定 - 系統管理員</title>
    
    <!-- Bootstrap 4 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/dashboard/admin" class="nav-link">系統管理員</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">用戶資料設定</a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/dashboard/admin" class="brand-link">
                <img src="https://adminlte.io/themes/v3/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">數據儀表板</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://adminlte.io/themes/v3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block"><%= user ? user.username : 'Guest' %></a>
                        <span class="badge badge-danger">系統管理員</span>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/dashboard/admin" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>系統概覽</p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview menu-open">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    用戶管理
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/dashboard/admin/profile" class="nav-link active">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>用戶資料設定</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/system-admins" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>系統管理員管理</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/agents" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>代理商管理</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/brands" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>品牌管理</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/individuals" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>個人經營管理</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">用戶資料設定</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/dashboard/admin">系統管理員</a></li>
                                <li class="breadcrumb-item active">用戶資料設定</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <!-- Flash Messages - 只在有錯誤時顯示 -->
                    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.trim() !== '') { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> <%= error_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">基本資料</h3>
                                </div>
                                <form action="/dashboard/admin/profile" method="POST">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="username">用戶名</label>
                                                    <input type="text" class="form-control" id="username" name="username" 
                                                           value="<%= user ? user.username : '' %>" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="email">電子郵件</label>
                                                    <input type="email" class="form-control" id="email" name="email" 
                                                           value="<%= user ? user.email : '' %>" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="firstName">名字</label>
                                                    <input type="text" class="form-control" id="firstName" name="firstName" 
                                                           value="<%= user ? user.firstName : '' %>">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="lastName">姓氏</label>
                                                    <input type="text" class="form-control" id="lastName" name="lastName" 
                                                           value="<%= user ? user.lastName : '' %>">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="role">角色</label>
                                                    <input type="text" class="form-control" id="role" 
                                                           value="<%= user.role === 'system_admin' ? '系統管理員' : user.role === 'agent' ? '代理商' : user.role === 'brand' ? '品牌' : '個人經營' %>" readonly>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="isActive">帳號狀態</label>
                                                        <input type="text" class="form-control" id="isActive" 
                                                        value="<%= user.isActive ? '啟用' : '停用' %>" readonly>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="emailVerified">電子郵件驗證</label>
                                                    <input type="text" class="form-control" id="emailVerified" 
                                                           value="<%= user.emailVerified ? '已驗證' : '未驗證' %>" readonly>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="lastLogin">最後登入</label>
                                                    <input type="text" class="form-control" id="lastLogin" 
                                                           value="<%= user.lastLogin ? new Date(user.lastLogin).toLocaleString('zh-TW') : '從未登入' %>" readonly>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="createdAt">註冊時間</label>
                                                    <input type="text" class="form-control" id="createdAt" 
                                                           value="<%= new Date(user.createdAt).toLocaleString('zh-TW') %>" readonly>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="updatedAt">最後更新</label>
                                                    <input type="text" class="form-control" id="updatedAt" 
                                                           value="<%= new Date(user.updatedAt).toLocaleString('zh-TW') %>" readonly>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save"></i> 儲存變更
                                        </button>
                                        <a href="/dashboard/admin" class="btn btn-secondary">
                                            <i class="fas fa-arrow-left"></i> 返回
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2025 <a href="#">全媒體數據儀表板</a>.</strong>
            All rights reserved.
        </footer>
    </div>

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    <script>
        $(document).ready(function() {
            // 處理帳號狀態切換
            $('#isActive').change(function() {
                const isChecked = $(this).is(':checked');
                const label = $(this).next('label');
                
                if (isChecked) {
                    label.text('啟用');
                    label.removeClass('text-danger').addClass('text-success');
                } else {
                    label.text('停用');
                    label.removeClass('text-success').addClass('text-danger');
                }
            });
            
            // 初始化狀態標籤顏色
            const isActive = $('#isActive').is(':checked');
            const label = $('#isActive').next('label');
            if (isActive) {
                label.addClass('text-success');
            } else {
                label.addClass('text-danger');
            }
            
            // 表單提交確認
            $('form').submit(function(e) {
                const isActive = $('#isActive').is(':checked');
                if (!isActive) {
                    if (!confirm('確定要停用此帳號嗎？停用後將無法登入系統！')) {
                        e.preventDefault();
                        return false;
                    }
                }
            });
        });
    </script>
</body>
</html>
