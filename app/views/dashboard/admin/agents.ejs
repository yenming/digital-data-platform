<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>代理商管理 - 系統管理員</title>
    
    <!-- Bootstrap 4 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/dashboard/admin" class="nav-link">系統管理員</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">代理商管理</a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/dashboard/admin" class="brand-link">
                <img src="https://adminlte.io/themes/v3/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">數據儀表板</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://adminlte.io/themes/v3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">系統管理員</a>
                        <span class="badge badge-danger">系統管理員</span>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/dashboard/admin" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>系統概覽</p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview menu-open">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    用戶管理
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/dashboard/admin/profile" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>用戶資料設定</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/system-admins" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>系統管理員管理</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/agents" class="nav-link active">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>代理商管理</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/brands" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>品牌管理</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/dashboard/admin/individuals" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>個人經營管理</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">代理商管理</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/dashboard/admin">系統管理員</a></li>
                                <li class="breadcrumb-item active">代理商管理</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <!-- 統計卡片 -->
                    <div class="row">
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3><%= users ? users.length : 0 %></h3>
                                    <p>代理商總數</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-handshake"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3><%= users ? users.filter(u => u.isActive).length : 0 %></h3>
                                    <p>啟用中</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-user-check"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3><%= users ? users.filter(u => !u.isActive).length : 0 %></h3>
                                    <p>已停用</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-user-times"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3><%= users ? users.filter(u => u.lastLogin && new Date(u.lastLogin) > new Date(Date.now() - 7*24*60*60*1000)).length : 0 %></h3>
                                    <p>7天內登入</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-user-clock"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 代理商列表 -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">代理商列表</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#createAgentModal">
                                            <i class="fas fa-plus"></i> 新增代理商
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>用戶名</th>
                                                    <th>電子郵件</th>
                                                    <th>姓名</th>
                                                    <th>上級管理員</th>
                                                    <th>狀態</th>
                                                    <th>最後登入</th>
                                                    <th>註冊日期</th>
                                                    <th>操作</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (users && users.length > 0) { %>
                                                    <% users.forEach(user => { %>
                                                        <tr>
                                                            <td><%= user.id %></td>
                                                            <td><%= user.username %></td>
                                                            <td><%= user.email %></td>
                                                            <td><%= user.firstName || '' %> <%= user.lastName || '' %></td>
                                                            <td>
                                                                <% if (user.ParentUser) { %>
                                                                    <span class="badge badge-info"><%= user.ParentUser.username %></span>
                                                                <% } else { %>
                                                                    <span class="text-muted">無</span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (user.isActive) { %>
                                                                    <span class="badge badge-success">啟用</span>
                                                                <% } else { %>
                                                                    <span class="badge badge-danger">停用</span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (user.lastLogin) { %>
                                                                    <%= new Date(user.lastLogin).toLocaleString('zh-TW') %>
                                                                <% } else { %>
                                                                    <span class="text-muted">從未登入</span>
                                                                <% } %>
                                                            </td>
                                                            <td><%= new Date(user.createdAt).toLocaleDateString('zh-TW') %></td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn btn-info btn-sm" onclick="viewAgent(<%= user.id %>)">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>
                                                                    <button type="button" class="btn btn-warning btn-sm" onclick="editAgent(<%= user.id %>)">
                                                                        <i class="fas fa-edit"></i>
                                                                    </button>
                                                                    <button type="button" class="btn btn-success btn-sm" onclick="manageBrands(<%= user.id %>)">
                                                                        <i class="fas fa-building"></i>
                                                                    </button>
                                                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteAgent(<%= user.id %>)">
                                                                        <i class="fas fa-trash"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="9" class="text-center">暫無代理商</td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- 創建代理商 Modal -->
        <div class="modal fade" id="createAgentModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">新增代理商</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <form action="/dashboard/admin/users" method="POST">
                        <div class="modal-body">
                            <input type="hidden" name="role" value="agent">
                            <div class="form-group">
                                <label for="username">用戶名</label>
                                <input type="text" class="form-control" id="username" name="username" required>
                            </div>
                            <div class="form-group">
                                <label for="email">電子郵件</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="password">密碼</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="firstName">名字</label>
                                        <input type="text" class="form-control" id="firstName" name="firstName">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="lastName">姓氏</label>
                                        <input type="text" class="form-control" id="lastName" name="lastName">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-warning">創建代理商</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2025 <a href="#">全媒體數據儀表板</a>.</strong>
            All rights reserved.
        </footer>
    </div>

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    <script>
        function viewAgent(agentId) {
            // 查看代理商詳情
            window.location.href = `/dashboard/admin/agents/${agentId}`;
        }

        function editAgent(agentId) {
            // 編輯代理商
            window.location.href = `/dashboard/admin/agents/${agentId}/edit`;
        }

        function manageBrands(agentId) {
            // 管理該代理商下的品牌
            window.location.href = `/dashboard/admin/agents/${agentId}/brands`;
        }

        function deleteAgent(agentId) {
            if (confirm('確定要刪除此代理商嗎？此操作無法復原，且會影響其下所有品牌和個人用戶。')) {
                fetch(`/dashboard/admin/users/${agentId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('刪除失敗');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('刪除失敗');
                });
            }
        }
    </script>
</body>
</html>
