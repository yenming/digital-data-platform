        function loadDashboardStats() {
            // 模擬數據載入
            $('#total-users').text('1,234');
            $('#active-users').text('856');
            $('#platforms-count').text('7');
            $('#reports-count').text('45');
        }

        function loadRecentUsers() {
            // 模擬最近登入用戶數據
            const recentUsers = [
                { username: 'agent001', role: '代理商', lastLogin: '2 分鐘前' },
                { username: 'brand002', role: '品牌', lastLogin: '5 分鐘前' },
                { username: 'individual003', role: '個人經營', lastLogin: '10 分鐘前' },
                { username: 'admin', role: '系統管理員', lastLogin: '1 小時前' }
            ];

            let html = '';
            recentUsers.forEach(user => {
                html += `
                    <tr>
                        <td>${user.username}</td>
                        <td><span class="badge badge-${getRoleBadgeColor(user.role)}">${user.role}</span></td>
                        <td>${user.lastLogin}</td>
                    </tr>
                `;
            });
            $('#recent-users').html(html);
        }

        function getRoleBadgeColor(role) {
            switch(role) {
                case '系統管理員': return 'danger';
                case '代理商': return 'warning';
                case '品牌': return 'info';
                case '個人經營': return 'success';
                default: return 'secondary';
            }
        }
